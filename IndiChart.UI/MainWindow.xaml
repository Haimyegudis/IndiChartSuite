<Window x:Class="IndiChart.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:IndiChart.UI"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="IndiChart Analytics Pro" Height="950" Width="1500"
        Background="#F3F4F6" FontFamily="Segoe UI"
        UseLayoutRounding="True" TextOptions.TextFormattingMode="Display">

    <Window.Resources>
        <local:SkiaColorConverter x:Key="SkiaToBrush"/>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.1" Color="Black"/>

        <Style TargetType="Border" x:Key="RibbonGroup">
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="GroupHeader">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="IconButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Border" x:Key="ChartCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="5,0,10,10"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="5" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <DockPanel>
                <StackPanel VerticalAlignment="Center" Margin="10,0,20,0">
                    <TextBlock Text="IndiChart" FontSize="22" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock Text="Pro Suite" FontSize="10" Foreground="Gray" HorizontalAlignment="Right" Margin="0,-5,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Border Style="{StaticResource RibbonGroup}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="📂 Load" Style="{StaticResource ModernButton}" Click="LoadFile_Click"/>
                                <Button Content="💾 Save" Style="{StaticResource ModernButton}" Background="#7C3AED" Click="SaveLayout_Click"/>
                                <Button Content="📥 Load" Style="{StaticResource ModernButton}" Background="#7C3AED" Click="LoadLayout_Click"/>
                            </StackPanel>
                            <TextBlock Text="File Operations" Style="{StaticResource GroupHeader}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource RibbonGroup}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="➕ Chart" Style="{StaticResource ModernButton}" Background="#10B981" Click="AddEmptyChart_Click"/>
                                <Button Content="⟲ Reset" Style="{StaticResource ModernButton}" Background="#6B7280" Click="ResetZoom_Click"/>
                                <Button Content="📅 Set Range" Style="{StaticResource ModernButton}" Background="#4B5563" Click="SetTimeRange_Click"/>
                            </StackPanel>
                            <TextBlock Text="View &amp; Range" Style="{StaticResource GroupHeader}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource RibbonGroup}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBox x:Name="JumpBox" Width="60" Padding="3" VerticalContentAlignment="Center" KeyDown="JumpBox_KeyDown" BorderBrush="#D1D5DB" BorderThickness="1" Margin="2"/>
                                <Button Content="Go" Style="{StaticResource ModernButton}" Click="JumpToLine_Click" Padding="8,4" Background="#6366F1"/>
                                <Button Content="🔍 Find" Style="{StaticResource ModernButton}" Background="#F59E0B" Click="FindValue_Click"/>
                            </StackPanel>
                            <TextBlock Text="Navigation" Style="{StaticResource GroupHeader}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource RibbonGroup}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="PlayButton" Content="▶ Play" Style="{StaticResource ModernButton}" Background="#10B981" Click="Play_Click" Width="70"/>
                                <Button Content="⏹" Style="{StaticResource ModernButton}" Background="#EF4444" Click="Stop_Click" Width="42"/>
                                <ComboBox x:Name="SpeedCombo" Width="55" Margin="2" VerticalContentAlignment="Center" SelectedIndex="1" SelectionChanged="SpeedCombo_SelectionChanged">
                                    <ComboBoxItem Content="x0.5" Tag="0.5"/>
                                    <ComboBoxItem Content="x1" Tag="1.0"/>
                                    <ComboBoxItem Content="x10" Tag="10.0"/>
                                    <ComboBoxItem Content="x50" Tag="50.0"/>
                                </ComboBox>
                            </StackPanel>
                            <TextBlock Text="Simulator" Style="{StaticResource GroupHeader}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource RibbonGroup}" BorderThickness="0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                                <CheckBox x:Name="ShowStatesCheck" Content="States" IsChecked="True" VerticalAlignment="Center" Checked="ShowStates_CheckedChanged" Unchecked="ShowStates_CheckedChanged"/>
                                <Button Content="❓ Help" Style="{StaticResource ModernButton}" Background="#8B5CF6" Margin="10,0,0,0" Click="Help_Click"/>
                            </StackPanel>
                            <TextBlock Text="Options" Style="{StaticResource GroupHeader}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="5,5,10,0" CornerRadius="4" Effect="{StaticResource CardShadow}">
            <local:StateTimeline x:Name="MainStateTimeline" />
        </Border>

        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" Margin="5,0,0,8" CornerRadius="6" Effect="{StaticResource CardShadow}" Padding="5">
                <TabControl BorderThickness="0" Background="Transparent">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Header="Signals">
                        <DockPanel Margin="0,5,0,0">
                            <ComboBox x:Name="CategoryFilter" DockPanel.Dock="Top" Margin="0,0,0,5" Padding="5" SelectionChanged="CategoryFilter_SelectionChanged" SelectedIndex="0">
                                <ComboBoxItem Content="All Signals"/>
                                <ComboBoxItem Content="Axis / Motion"/>
                                <ComboBoxItem Content="IO / Sensors"/>
                                <ComboBoxItem Content="States / Logic"/>
                            </ComboBox>
                            <TextBox x:Name="SearchBox" DockPanel.Dock="Top" Padding="5" Margin="0,0,0,5" BorderBrush="#D1D5DB" BorderThickness="1" TextChanged="SearchBox_TextChanged" Tag="Search..."/>
                            <ListBox x:Name="ComponentList" BorderThickness="0" Background="Transparent" MouseDoubleClick="ComponentList_MouseDoubleClick" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="Events">
                        <ListView x:Name="EventsListView" BorderThickness="0" MouseDoubleClick="EventsListView_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Time" Width="70" DisplayMemberBinding="{Binding Time}"/>
                                    <GridViewColumn Header="State" Width="130">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="10" Height="10" CornerRadius="5" Background="{Binding Color, Converter={StaticResource SkiaToBrush}}" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding StateName}" FontSize="11"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                </TabControl>
            </Border>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ChartsContainer">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ChartCardStyle}" MouseDown="ChartBorder_MouseDown">
                                <Grid Height="180">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#F9FAFB" CornerRadius="6,6,0,0" Padding="8,0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                        <DockPanel LastChildFill="False">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="11" Foreground="#374151" VerticalAlignment="Center"/>
                                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                                <Button Style="{StaticResource IconButton}" Click="ExportChart_Click" Tag="{Binding}" ToolTip="Export">
                                                    <TextBlock Text="💾" FontSize="12"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButton}" Click="Snapshot_Click" Tag="{Binding}" ToolTip="Snapshot">
                                                    <TextBlock Text="📷" FontSize="12"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButton}" Click="RemoveChart_Click" Tag="{Binding}" Foreground="#EF4444" ToolTip="Close">
                                                    <TextBlock Text="✖" FontSize="10"/>
                                                </Button>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="170"/>
                                        </Grid.ColumnDefinitions>
                                        <local:GraphView Grid.Column="0" Loaded="GraphView_Loaded" Margin="2"/>
                                        <Border Grid.Column="1" BorderBrush="#F3F4F6" BorderThickness="1,0,0,0" Background="#FAFAFA">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                <ItemsControl ItemsSource="{Binding Series}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="4,2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <CheckBox Grid.Column="0" IsChecked="{Binding IsVisible}" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                                                <Border Grid.Column="1" Width="8" Height="8" CornerRadius="4" Margin="0,0,3,0" Background="{Binding Color, Converter={StaticResource SkiaToBrush}}"/>
                                                                <Button Grid.Column="2" Content="{Binding AxisDisplay}" Width="16" Height="14" FontSize="9" FontWeight="Bold" Margin="0,0,3,0" Background="#EFF6FF" Foreground="#3B82F6" BorderThickness="1" BorderBrush="#DBEAFE" Click="ToggleAxis_Click" Tag="{Binding}" ToolTip="Switch Axis"/>
                                                                <TextBlock Grid.Column="3" Text="{Binding Name}" FontSize="10" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" ToolTip="{Binding Name}"/>
                                                                <TextBlock Grid.Column="4" Text="{Binding CurrentValueDisplay}" FontSize="10" FontWeight="Bold" Margin="3,0" VerticalAlignment="Center" Foreground="#2563EB"/>
                                                                <Button Grid.Column="5" Content="x" Width="12" Height="12" FontSize="9" Padding="0" Background="Transparent" Foreground="Red" BorderThickness="0" Click="RemoveSeries_Click" Tag="{Binding}"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="3" Background="#E5E7EB">
            <ProgressBar x:Name="LoadingBar" Height="4" IsIndeterminate="True" Visibility="Collapsed" Background="Transparent" BorderThickness="0" Foreground="#2563EB"/>
        </Grid>
    </Grid>
</Window>