<Window x:Class="IndiChart.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:IndiChart.UI"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="IndiChart Analytics Pro" Height="950" Width="1500"
        Background="#F3F4F6" FontFamily="Segoe UI"
        UseLayoutRounding="True" TextOptions.TextFormattingMode="Display">

    <Window.Resources>
        <local:SkiaColorConverter x:Key="SkiaToBrush"/>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.1" Color="Black"/>

        <Style TargetType="Border" x:Key="RibbonGroup">
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="GroupHeader">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="IconButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Border" x:Key="ChartCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="5,0,10,10"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="5,2">
            <MenuItem Header="_File" FontSize="13" Padding="8,8">
                <MenuItem Header="_Load CSV File" Click="LoadFile_Click" InputGestureText="Ctrl+O" Height="32">
                    <MenuItem.Icon><TextBlock Text="📂" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Save Layout" Click="SaveLayout_Click" InputGestureText="Ctrl+S" Height="32">
                    <MenuItem.Icon><TextBlock Text="💾" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="L_oad Layout" Click="LoadLayout_Click" Height="32">
                    <MenuItem.Icon><TextBlock Text="📥" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" Height="32">
                    <MenuItem.Icon><TextBlock Text="✖" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Navigation" FontSize="13" Padding="8,8">
                <MenuItem Header="_Find Value" Click="FindValue_Click" InputGestureText="Ctrl+F" Height="32">
                    <MenuItem.Icon><TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Jump to Line" Click="JumpToLine_Click" InputGestureText="Ctrl+G" Height="32">
                    <MenuItem.Icon><TextBlock Text="↗" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Set Time _Range" Click="SetTimeRange_Click" Height="32">
                    <MenuItem.Icon><TextBlock Text="📅" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_View" FontSize="13" Padding="8,8">
                <MenuItem Header="_Reset Zoom" Click="ResetZoom_Click" Height="32">
                    <MenuItem.Icon><TextBlock Text="⟲" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Add New Chart" Click="AddEmptyChart_Click" Height="32">
                    <MenuItem.Icon><TextBlock Text="➕" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Show _States" IsCheckable="True" IsChecked="True" Click="ShowStates_MenuClick" Height="32"/>
                <Separator/>
                <MenuItem Header="Manage Reference _Lines" Click="ManageLines_Click" Height="32">
                    <MenuItem.Icon><TextBlock Text="📏" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Settings" FontSize="13" Padding="8,8">
                <MenuItem Header="_Dark Mode" IsCheckable="True" Name="DarkModeMenuItem" Click="DarkMode_Click" Height="32"/>
            </MenuItem>

            <MenuItem Header="_Help" FontSize="13" Padding="8,8">
                <MenuItem Header="_About" Click="Help_Click" Height="32">
                    <MenuItem.Icon><TextBlock Text="❓" FontSize="16" VerticalAlignment="Center"/></MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Toolbar - Only Physical Controls -->
        <Border Grid.Row="1" Background="White" Padding="8,5" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <StackPanel VerticalAlignment="Center" Margin="10,0,30,0">
                    <TextBlock Text="IndiChart" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock Text="Analytics Pro" FontSize="9" Foreground="Gray" HorizontalAlignment="Right" Margin="0,-3,0,0"/>
                </StackPanel>

                <!-- Playback Controls -->
                <Border Background="#F9FAFB" CornerRadius="4" Padding="8,4" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Playback:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,0" Foreground="#374151"/>
                        <Button x:Name="PlayButton" Content="▶ Play" Style="{StaticResource ModernButton}" Background="#10B981" Click="Play_Click" Width="70" Height="28"/>
                        <Button Content="⏹" Style="{StaticResource ModernButton}" Background="#EF4444" Click="Stop_Click" Width="42" Height="28"/>
                        <ComboBox x:Name="SpeedCombo" Width="60" Margin="5,0,0,0" VerticalContentAlignment="Center" SelectedIndex="1" SelectionChanged="SpeedCombo_SelectionChanged" Height="28">
                            <ComboBoxItem Content="x0.5" Tag="0.5"/>
                            <ComboBoxItem Content="x1" Tag="1.0"/>
                            <ComboBoxItem Content="x10" Tag="10.0"/>
                            <ComboBoxItem Content="x50" Tag="50.0"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Chart Controls -->
                <Border Background="#F9FAFB" CornerRadius="4" Padding="8,4" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Charts:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,0" Foreground="#374151"/>
                        <Button Content="➕ Add" Style="{StaticResource ModernButton}" Background="#10B981" Click="AddEmptyChart_Click" Height="28" Padding="10,4"/>
                        <Button Content="⟲ Reset" Style="{StaticResource ModernButton}" Background="#6B7280" Click="ResetZoom_Click" Height="28" Padding="10,4"/>
                    </StackPanel>
                </Border>

                <!-- States Toggle -->
                <Border Background="#F9FAFB" CornerRadius="4" Padding="8,4">
                    <CheckBox x:Name="ShowStatesCheck" Content="Show States" IsChecked="True" VerticalAlignment="Center" FontWeight="SemiBold" Checked="ShowStates_CheckedChanged" Unchecked="ShowStates_CheckedChanged"/>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="White" Margin="5,5,10,0" CornerRadius="4" Effect="{StaticResource CardShadow}">
            <local:StateTimeline x:Name="MainStateTimeline" />
        </Border>

        <!-- Navigation Slider -->
        <Border Grid.Row="3" Background="White" Margin="5,5,10,5" Padding="10,5" CornerRadius="4" Effect="{StaticResource CardShadow}">
            <DockPanel>
                <Button x:Name="NavLeftButton" DockPanel.Dock="Left" Content="◀" Width="30" Height="24" Margin="0,0,10,0" Style="{StaticResource ModernButton}" Background="#6B7280" Click="NavLeft_Click"/>
                <Button x:Name="NavRightButton" DockPanel.Dock="Right" Content="▶" Width="30" Height="24" Margin="10,0,0,0" Style="{StaticResource ModernButton}" Background="#6B7280" Click="NavRight_Click"/>
                <Slider x:Name="NavSlider" Minimum="0" Maximum="100" Value="0" TickFrequency="1" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center" ValueChanged="NavSlider_ValueChanged"/>
            </DockPanel>
        </Border>

        <Grid Grid.Row="4" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPanelColumn" Width="280" MinWidth="50"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="LeftPanelBorder" Grid.Column="0" Background="White" Margin="5,0,0,8" CornerRadius="6" Effect="{StaticResource CardShadow}" Padding="5">
                <TabControl BorderThickness="0" Background="Transparent">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Header="Signals">
                        <DockPanel Margin="0,5,0,0">
                            <ComboBox x:Name="CategoryFilter" DockPanel.Dock="Top" Margin="0,0,0,5" Padding="5" SelectionChanged="CategoryFilter_SelectionChanged" SelectedIndex="0">
                                <ComboBoxItem Content="All Signals"/>
                                <ComboBoxItem Content="Axis / Motion"/>
                                <ComboBoxItem Content="IO / Sensors"/>
                                <ComboBoxItem Content="States / Logic"/>
                            </ComboBox>
                            <TextBox x:Name="SearchBox" DockPanel.Dock="Top" Padding="5" Margin="0,0,0,5" BorderBrush="#D1D5DB" BorderThickness="1" TextChanged="SearchBox_TextChanged" Tag="Search..."/>
                            <ListBox x:Name="ComponentList" BorderThickness="0" Background="Transparent" MouseDoubleClick="ComponentList_MouseDoubleClick" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="States Transitions">
                        <ListView x:Name="EventsListView" BorderThickness="0" MouseDoubleClick="EventsListView_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Time" Width="70" DisplayMemberBinding="{Binding Time}"/>
                                    <GridViewColumn Header="State" Width="130">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="10" Height="10" CornerRadius="5" Background="{Binding Color, Converter={StaticResource SkiaToBrush}}" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding StateName}" FontSize="11"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- GridSplitter for left panel resize -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                          Background="#E5E7EB" Cursor="SizeWE" Margin="0,0,0,8"/>

            <!-- Collapse/Expand button for left panel -->
            <Button x:Name="CollapseButton" Grid.Column="1" Content="◀" Width="20" Height="60"
                    VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-10,0"
                    Background="#6B7280" Foreground="White" FontSize="10" FontWeight="Bold"
                    Click="ToggleLeftPanel_Click" ToolTip="Collapse/Expand Panel" Cursor="Hand"
                    Panel.ZIndex="100">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0,4,4,0" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" PreviewKeyDown="ChartsArea_PreviewKeyDown">
                <ItemsControl x:Name="ChartsContainer">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Border Style="{StaticResource ChartCardStyle}" MouseDown="ChartBorder_MouseDown">
                                    <Grid Height="{Binding ChartHeight}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="28"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#F9FAFB" CornerRadius="6,6,0,0" Padding="8,0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                        <DockPanel LastChildFill="False">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="11" Foreground="#374151" VerticalAlignment="Center"/>
                                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                                <Button Style="{StaticResource IconButton}" Click="ExportChart_Click" Tag="{Binding}" ToolTip="Export">
                                                    <TextBlock Text="💾" FontSize="12"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButton}" Click="Snapshot_Click" Tag="{Binding}" ToolTip="Snapshot">
                                                    <TextBlock Text="📷" FontSize="12"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButton}" Click="RemoveChart_Click" Tag="{Binding}" Foreground="#EF4444" ToolTip="Close">
                                                    <TextBlock Text="✖" FontSize="10"/>
                                                </Button>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="170"/>
                                        </Grid.ColumnDefinitions>
                                        <local:GraphView Grid.Column="0" Loaded="GraphView_Loaded" Margin="2"/>
                                        <Border Grid.Column="1" BorderBrush="#F3F4F6" BorderThickness="1,0,0,0" Background="#FAFAFA">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                <ItemsControl ItemsSource="{Binding Series}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="4,2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <CheckBox Grid.Column="0" IsChecked="{Binding IsVisible}" Margin="0,0,3,0" VerticalAlignment="Center" Checked="SeriesVisibility_Changed" Unchecked="SeriesVisibility_Changed"/>
                                                                <Border Grid.Column="1" Width="8" Height="8" CornerRadius="4" Margin="0,0,3,0" Background="{Binding Color, Converter={StaticResource SkiaToBrush}}"/>
                                                                <Button Grid.Column="2" Content="{Binding AxisDisplay}" Width="16" Height="14" FontSize="9" FontWeight="Bold" Margin="0,0,3,0" Background="#EFF6FF" Foreground="#3B82F6" BorderThickness="1" BorderBrush="#DBEAFE" Click="ToggleAxis_Click" Tag="{Binding}" ToolTip="Switch Axis"/>
                                                                <TextBlock Grid.Column="3" Text="{Binding Name}" FontSize="10" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" ToolTip="{Binding Name}"/>
                                                                <TextBlock Grid.Column="4" Text="{Binding CurrentValueDisplay}" FontSize="10" FontWeight="Bold" Margin="3,0" VerticalAlignment="Center" Foreground="#2563EB"/>
                                                                <Button Grid.Column="5" Content="x" Width="12" Height="12" FontSize="9" Padding="0" Background="Transparent" Foreground="Red" BorderThickness="0" Click="RemoveSeries_Click" Tag="{Binding}"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                            <!-- Resize Gripper for chart height -->
                            <Border Height="8" Background="Transparent" Cursor="SizeNS"
                                    Margin="5,0,10,5" CornerRadius="4"
                                    MouseDown="ChartResizeGripper_MouseDown"
                                    MouseMove="ChartResizeGripper_MouseMove"
                                    MouseUp="ChartResizeGripper_MouseUp"
                                    Tag="{Binding}">
                                <Border Height="3" Width="40" Background="#D1D5DB" CornerRadius="2"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="5" Background="#E5E7EB">
            <ProgressBar x:Name="LoadingBar" Height="4" IsIndeterminate="True" Visibility="Collapsed" Background="Transparent" BorderThickness="0" Foreground="#2563EB"/>
        </Grid>
    </Grid>
</Window>