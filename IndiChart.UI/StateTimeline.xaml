<UserControl x:Class="IndiChart.UI.StateTimeline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF">
    <Grid>
        <skia:SKElement x:Name="TimelineCanvas" PaintSurface="OnPaintSurface" MouseLeftButtonDown="OnMouseDown"/>
        <Popup x:Name="StatePopup" Placement="Mouse" IsOpen="False" StaysOpen="False">
            <Border Background="White" BorderBrush="Black" BorderThickness="1" Padding="5">
                <TextBlock x:Name="PopupText"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>