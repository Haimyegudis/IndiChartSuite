<Window x:Class="IndiChart.UI.FindValueDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find Value"
        Width="500" Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15,10">
            <TextBlock Text="Find Value - Query Syntax"
                       FontSize="16" FontWeight="Bold"
                       Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <!-- Input Section -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="Enter query:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Name="QueryTextBox" FontSize="14" Padding="5"
                         VerticalContentAlignment="Center" Height="30"/>
            </StackPanel>
        </Border>

        <!-- Instructions (Scrollable) -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="15">
            <StackPanel>
                <TextBlock FontWeight="Bold" Margin="0,5,0,5">BASIC SEARCH:</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap" FontFamily="Consolas">• Exact value: 100</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap" FontFamily="Consolas">• Greater than: &gt;100</TextBlock>
                <TextBlock Margin="15,0,0,10" TextWrapping="Wrap" FontFamily="Consolas">• Less than: &lt;50</TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,5,0,5">DIRECTIONAL SEARCH:</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap" FontFamily="Consolas">• Next occurrence: N:100 or N:&gt;100</TextBlock>
                <TextBlock Margin="15,0,0,10" TextWrapping="Wrap" FontFamily="Consolas">• Previous occurrence: P:100 or P:&lt;50</TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,5,0,5">EXAMPLES:</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap" FontFamily="Consolas">• Find exact 42: 42</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap" FontFamily="Consolas">• Find next value &gt; 100: N:&gt;100</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap" FontFamily="Consolas">• Find previous value &lt; 20: P:&lt;20</TextBlock>
                <TextBlock Margin="15,0,0,10" TextWrapping="Wrap" FontFamily="Consolas">• Find next exact 50: N:50</TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,5,0,5">NOTES:</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap">• Search is within current view range</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap">• Uses first visible signal in chart</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap">• Decimal numbers supported (e.g., 23.5)</TextBlock>
                <TextBlock Margin="15,0,0,3" TextWrapping="Wrap">• Red line = cursor, Blue line = result</TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="#F5F5F5" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Search" IsDefault="True" Padding="20,5" Margin="0,0,10,0" Click="Search_Click"/>
                <Button Content="Cancel" IsCancel="True" Padding="20,5" Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
